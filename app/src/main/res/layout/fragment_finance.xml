<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.finance.FinanceFragment">

    <LinearLayout
        android:id="@+id/finance_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/text_monthly_spending_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Spending"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingTop="16dp"/>

        <TextView
            android:id="@+id/text_monthly_spending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="-$1,234.56"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="@android:color/holo_red_dark"
            android:paddingBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_transactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_item_transaction" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/auth_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground"
        android:visibility="visible"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_baseline_security_24"
                app:tint="?attr/colorPrimary"
                android:contentDescription="Security Lock"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock required"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please authenticate to view finance data"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/button_unlock_finance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="Add Transaction"
        app:tint="@android:color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>