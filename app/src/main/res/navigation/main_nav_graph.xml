<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_tasks">

    <!-- Task Fragments -->
    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.example.flow.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks" >
        <action
            android:id="@+id/action_tasksFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
        <!-- ACTION IS MOVED FROM HERE -->
    </fragment>
    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.example.flow.ui.tasks.AddEditTaskFragment"
        android:label="Task Details"
        tools:layout="@layout/fragment_add_edit_task" >
        <argument
            android:name="taskId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Finance Fragments -->
    <fragment
        android:id="@+id/nav_finance"
        android:name="com.example.flow.ui.finance.FinanceFragment"
        android:label="Finances"
        tools:layout="@layout/fragment_finance" >
        <action
            android:id="@+id/action_financeFragment_to_addEditTransactionFragment"
            app:destination="@id/addEditTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditTransactionFragment"
        android:name="com.example.flow.ui.finance.AddEditTransactionFragment"
        android:label="Transaction Details"
        tools:layout="@layout/fragment_add_edit_transaction" >
        <argument
            android:name="transactionId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Note Fragments -->
    <fragment
        android:id="@+id/nav_notes"
        android:name="com.example.flow.ui.notes.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes" >
        <action
            android:id="@+id/action_nav_notes_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.example.flow.ui.notes.AddEditNoteFragment"
        android:label="Note"
        tools:layout="@layout/fragment_add_edit_note" >
        <argument
            android:name="noteId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="decryptedContent"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.flow.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- ACTION IS MOVED HERE, TO THE ROOT, TO BE TRULY GLOBAL -->
    <action
        android:id="@+id/action_global_to_settingsFragment"
        app:destination="@id/settingsFragment" />

</navigation>