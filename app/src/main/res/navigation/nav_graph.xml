<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/nav_tasks">

    <!-- Task Fragment (Start Destination) -->
    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.example.flow.ui.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks" >
        <!-- Action to go from Task List to Add/Edit screen -->
        <action
            android:id="@+id/action_nav_tasks_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
    </fragment>

    <!-- Finance Fragment -->
    <fragment
        android:id="@+id/nav_finance"
        android:name="com.example.flow.ui.finance.FinanceFragment"
        android:label="Finances"
        tools:layout="@layout/fragment_finance" />

    <!-- Notes Fragment -->
    <fragment
        android:id="@+id/nav_notes"
        android:name="com.example.flow.ui.notes.NotesFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_notes" />

    <!-- Add/Edit Task Fragment (The new destination) -->
    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.example.flow.ui.tasks.AddEditTaskFragment"
        android:label="Task Details"
        tools:layout="@layout/fragment_add_edit_task" >
        <!--
        This argument 'taskId' will be passed when we navigate.
        'string' type, nullable (so we can pass 'null' for new tasks).
        -->
        <argument
            android:name="taskId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>